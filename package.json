{
    "name": "cli-max",
    "version": "0.0.0-development",
    "author": "Vamshi Krishna Alladi <vamshikrishnaalladi.me@gmail.com>",
    "license": "MIT",
    "description": "An opinionated solution for building CLI programs.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/VamshiKrishnaAlladi/cli-max.git"
    },
    "keywords": [
        "CLI",
        "command",
        "minimist",
        "commander",
        "subcommand"
    ],
    "bugs": {
        "url": "https://github.com/VamshiKrishnaAlladi/cli-max/issues"
    },
    "homepage": "https://github.com/VamshiKrishnaAlladi/cli-max#readme",
    "engines": {
        "node": ">=7.10.0",
        "npm": ">=4.2.0"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "tsc",
        "codecov": "codecov",
        "commit": "git-cz",
        "lint": "tslint -t codeFrame -p .",
        "prepare": "npm run build",
        "prePublishOnly": "npm run lint && npm test",
        "semantic-release": "semantic-release",
        "test": "jest --config ./jest.config.json",
        "test:ci": "npm test -- --coverage",
        "posttest:ci": "cat ./coverage/lcov.info | codacy-coverage",
        "test:verbose": "npm test -- --verbose",
        "watch:build": "npm run build -- --watch",
        "watch:test": "npm test -- --verbose --watchAll"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "npm run lint && npm test"
        }
    },
    "dependencies": {
        "@vka/ts-utils": "2.2.0",
        "minimist": "1.2.0"
    },
    "devDependencies": {
        "@commitlint/cli": "7.2.1",
        "@types/jest": "23.3.9",
        "@types/minimist": "1.2.0",
        "@types/node": "10.12.9",
        "codacy-coverage": "3.2.0",
        "codecov": "3.1.0",
        "commitizen": "3.0.4",
        "cz-conventional-changelog": "2.1.0",
        "fs-extra": "7.0.1",
        "husky": "1.1.4",
        "jest": "23.6.0",
        "rimraf": "2.6.2",
        "semantic-release": "15.12.0",
        "ts-jest": "23.10.4",
        "tslint": "5.11.0",
        "tslint-config-airbnb": "5.11.1",
        "typescript": "3.1.6"
    }
}
