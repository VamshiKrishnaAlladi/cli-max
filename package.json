{
    "name": "cli-max",
    "version": "0.0.0-development",
    "author": "Vamshi Krishna Alladi <vamshikrishnaalladi.me@gmail.com>",
    "license": "MIT",
    "description": "An opinionated solution for building CLI programs.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/VamshiKrishnaAlladi/cli-max.git"
    },
    "keywords": [
        "CLI",
        "command",
        "minimist",
        "commander",
        "subcommand"
    ],
    "bugs": {
        "url": "https://github.com/VamshiKrishnaAlladi/cli-max/issues"
    },
    "homepage": "https://github.com/VamshiKrishnaAlladi/cli-max#readme",
    "engines": {
        "node": ">=7.10.0",
        "npm": ">=4.2.0"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "tsc",
        "codecov": "codecov",
        "lint": "tslint -t codeFrame -p .",
        "prepare": "npm run build",
        "prePublishOnly": "npm run lint && npm test",
        "semantic-release": "semantic-release",
        "test": "jest --config ./jest.config.json",
        "test:ci": "npm test -- --coverage",
        "test:verbose": "npm test -- --verbose",
        "watch:build": "npm run build -- --watch",
        "watch:test:brief": "npm test -- --watchAll",
        "watch:test": "npm test -- --verbose --watchAll"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "npm run lint && npm test"
        }
    },
    "dependencies": {
        "@vka/ts-utils": "2.3.0",
        "chalk": "2.4.2",
        "minimist": "1.2.0"
    },
    "devDependencies": {
        "@commitlint/cli": "8.1.0",
        "@types/jest": "24.0.16",
        "@types/minimist": "1.2.0",
        "@types/node": "10.12.21",
        "codecov": "3.5.0",
        "cz-conventional-changelog": "2.1.0",
        "fs-extra": "7.0.1",
        "husky": "1.3.1",
        "jest": "24.8.0",
        "rimraf": "2.6.3",
        "semantic-release": "15.13.19",
        "ts-jest": "24.0.2",
        "tslint": "5.12.1",
        "tslint-config-airbnb": "5.11.1",
        "typescript": "3.3.1"
    }
}
