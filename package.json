{
    "name": "cli-max",
    "version": "0.0.0-development",
    "author": "Vamshi Krishna Alladi <vamshikrishnaalladi.me@gmail.com>",
    "license": "MIT",
    "description": "An opinionated solution for building CLI programs.",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/VamshiKrishnaAlladi/cli-max.git"
    },
    "keywords": [
        "CLI",
        "command",
        "minimist",
        "commander",
        "subcommand"
    ],
    "bugs": {
        "url": "https://github.com/VamshiKrishnaAlladi/cli-max/issues"
    },
    "homepage": "https://github.com/VamshiKrishnaAlladi/cli-max#readme",
    "engines": {
        "node": ">=7.10.0",
        "npm": ">=4.2.0"
    },
    "scripts": {
        "build": "tsc",
        "codecov": "codecov",
        "commit": "git-cz",
        "lint": "eslint . && tslint -t codeFrame -p .",
        "prepack": "tsc && npm test && node scripts/prePublishOnly.js",
        "prePublishOnly": "tsc && npm test && node scripts/prePublishOnly.js",
        "test": "jest --config ./jest.config.json",
        "test:verbose": "npm test -- --verbose",
        "test:ci": "npm test -- --coverage && cat ./coverage/lcov.info | codacy-coverage --language typescript",
        "watch:build": "tsc --watch",
        "watch:test": "npm test -- --verbose --watchAll",
        "semantic-release": "semantic-release"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "npm run lint && npm test"
        }
    },
    "dependencies": {
        "@vka/ts-utils": "2.1.1",
        "minimist": "1.2.0"
    },
    "devDependencies": {
        "@commitlint/cli": "7.2.1",
        "@types/jest": "23.3.9",
        "@types/minimist": "1.2.0",
        "@types/node": "10.12.5",
        "codacy-coverage": "3.2.0",
        "codecov": "3.1.0",
        "commitizen": "3.0.4",
        "cz-conventional-changelog": "2.1.0",
        "eslint": "5.9.0",
        "eslint-config-airbnb-base": "13.1.0",
        "eslint-plugin-import": "2.14.0",
        "fs-extra": "7.0.1",
        "husky": "1.1.3",
        "jest": "23.6.0",
        "semantic-release": "15.11.0",
        "ts-jest": "23.10.4",
        "tslint": "5.11.0",
        "tslint-config-airbnb": "5.11.0",
        "typescript": "3.1.6"
    }
}
