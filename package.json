{
    "name": "cli-max",
    "version": "0.0.1",
    "author": "Vamshi Krishna Alladi <vamshikrishnaalladi.me@gmail.com>",
    "license": "MIT",
    "description": "An opinionated solution for building CLI programs.",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/VamshiKrishnaAlladi/cli-max.git"
    },
    "keywords": [
        "CLI",
        "command",
        "minimist",
        "commander",
        "subcommand"
    ],
    "bugs": {
        "url": "https://github.com/VamshiKrishnaAlladi/cli-max/issues"
    },
    "homepage": "https://github.com/VamshiKrishnaAlladi/cli-max#readme",
    "engines": {
        "node": ">=7.10.0",
        "npm": ">=4.2.0"
    },
    "scripts": {
        "build": "tsc",
        "lint": "tslint -t codeFrame -p .",
        "test": "jest --verbose",
        "watch:build": "tsc --watch",
        "watch:test": "jest --verbose --watchAll"
    },
    "dependencies": {
        "@vka/ts-utils": "^1.4.1"
    },
    "devDependencies": {
        "@types/jest": "^22.0.1",
        "@types/node": "^9.3.0",
        "jest": "^22.0.6",
        "ts-jest": "^22.0.1",
        "tslint": "^5.9.1",
        "tslint-config-airbnb": "^5.4.2",
        "typescript": "^2.6.2"
    },
    "jest": {
        "collectCoverage": true,
        "mapCoverage": true,
        "globals": {
            "ts-jest": {
                "tsConfigFile": "./ts-jest.tsconfig.json"
            }
        },
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
