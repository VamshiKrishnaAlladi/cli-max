{
    "name": "cli-max",
    "version": "0.0.0-development",
    "author": "Vamshi Krishna Alladi <vamshikrishnaalladi.me@gmail.com>",
    "license": "MIT",
    "description": "An opinionated solution for building CLI programs.",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/VamshiKrishnaAlladi/cli-max.git"
    },
    "keywords": [
        "CLI",
        "command",
        "minimist",
        "commander",
        "subcommand"
    ],
    "bugs": {
        "url": "https://github.com/VamshiKrishnaAlladi/cli-max/issues"
    },
    "homepage": "https://github.com/VamshiKrishnaAlladi/cli-max#readme",
    "engines": {
        "node": ">=7.10.0",
        "npm": ">=4.2.0"
    },
    "scripts": {
        "build": "tsc",
        "codecov": "codecov",
        "commit": "git-cz",
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "lint": "eslint . && tslint -t codeFrame -p .",
        "precommit": "npm run lint && npm test",
        "prepack": "tsc && npm test && node scripts/prePublishOnly.js",
        "prePublishOnly": "tsc && npm test && node scripts/prePublishOnly.js",
        "test": "jest --config ./jest.config.json",
        "test:verbose": "npm test -- --verbose",
        "test:ci": "npm test -- --coverage && cat ./coverage/lcov.info | codacy-coverage --language typescript",
        "watch:build": "tsc --watch",
        "watch:test": "npm test -- --verbose --watchAll",
        "semantic-release": "semantic-release"
    },
    "dependencies": {
        "@vka/ts-utils": "2.1.1"
    },
    "devDependencies": {
        "@commitlint/cli": "6.2.0",
        "@types/jest": "22.2.3",
        "@types/node": "10.1.3",
        "codacy-coverage": "3.0.0",
        "codecov": "3.0.2",
        "commitizen": "2.10.1",
        "cz-conventional-changelog": "2.1.0",
        "eslint": "4.19.1",
        "eslint-config-airbnb-base": "12.1.0",
        "eslint-plugin-import": "2.12.0",
        "fs-extra": "6.0.1",
        "husky": "0.14.3",
        "jest": "23.0.1",
        "semantic-release": "15.5.1",
        "ts-jest": "22.4.6",
        "tslint": "5.10.0",
        "tslint-config-airbnb": "5.9.2",
        "typescript": "2.8.3"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
